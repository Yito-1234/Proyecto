@model Proyecto1.Models.ViewModel.UsuarioVM
@{
    ViewData["Title"] = "Login";
}

<h1>Inicio de Sesión</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Usuarios" id="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Usuario1" class="control-label">Usuario</label>
                <input asp-for="Usuario1" class="form-control" />
                <span asp-validation-for="Usuario1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
  
            <div class="form-group">
                <button type="submit"  class="btn btn-primary"> Inisiar Session</button>
            </div>
        </form>
    </div>
</div>

